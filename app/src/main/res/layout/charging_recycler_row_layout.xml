<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/plugImage"
        android:layout_width="72dp"
        android:layout_height="97dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plug" />

    <TextView
        android:id="@+id/stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Title goes here"
        app:layout_constraintStart_toEndOf="@+id/plugImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latitudeGoesHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="latitudeGoesHere"
        app:layout_constraintStart_toEndOf="@+id/plugImage"
        app:layout_constraintTop_toBottomOf="@+id/stationName" />

    <TextView
        android:id="@+id/longitudeGoesHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="longitudeGoesHere"
        app:layout_constraintStart_toEndOf="@+id/plugImage"
        app:layout_constraintTop_toBottomOf="@+id/latitudeGoesHere" />

    <TextView
        android:id="@+id/contactPhoneGoesHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="contactPhoneGoesHere"
        app:layout_constraintStart_toEndOf="@+id/plugImage"
        app:layout_constraintTop_toBottomOf="@+id/longitudeGoesHere" />

</androidx.constraintlayout.widget.ConstraintLayout>