<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/movieDetailsFrag">

    <TextView
        android:id="@+id/actors_message"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:text="Main Actors go here"
        app:layout_constraintStart_toStartOf="@+id/runtime_message"
        app:layout_constraintTop_toBottomOf="@+id/runtime_message" />

    <TextView
        android:id="@+id/plot_message"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Plot goes here"
        app:layout_constraintStart_toStartOf="@+id/actors_message"
        app:layout_constraintTop_toBottomOf="@+id/actors_message" />

    <TextView
        android:id="@+id/runtime_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Runtime goes here"
        app:layout_constraintStart_toStartOf="@+id/rating_message"
        app:layout_constraintTop_toBottomOf="@+id/rating_message" />

    <TextView
        android:id="@+id/rating_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Rating goes here"
        app:layout_constraintStart_toStartOf="@+id/year_message"
        app:layout_constraintTop_toBottomOf="@+id/year_message" />

    <TextView
        android:id="@+id/year_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Year goes here"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/title_message"
        app:layout_constraintTop_toBottomOf="@+id/title_message" />

    <TextView
        android:id="@+id/title_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Title goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/poster"
        android:layout_width="200dp"
        android:layout_height="275dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/temp" />
</androidx.constraintlayout.widget.ConstraintLayout>