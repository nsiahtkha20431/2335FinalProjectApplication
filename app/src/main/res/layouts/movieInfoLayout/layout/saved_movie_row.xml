<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/saved_row">

    <ImageView
        android:id="@+id/save_poster"
        android:layout_width="99dp"
        android:layout_height="99dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/temp" />

    <TextView
        android:id="@+id/save_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Title"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/save_poster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/save_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Year"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/save_poster"
        app:layout_constraintTop_toBottomOf="@+id/save_title" />

    <TextView
        android:id="@+id/save_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Rated"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/save_poster" />
</androidx.constraintlayout.widget.ConstraintLayout>